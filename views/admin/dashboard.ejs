<%- include('../partials/header') %>
<div class="container mx-auto p-4">
    <h2 class="text-2xl font-bold mb-4">Admin Dashboard</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-3">Quick Actions</h3>
            <div class="flex flex-wrap gap-4">
                <a href="/admin/courses" class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Manage Courses</a>
                <a href="/admin/students" class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700">Manage Students</a>
            </div>
        </div>
        
        <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="text-xl font-semibold mb-3">Reports</h3>
            <div class="flex flex-wrap gap-4">
                <button class="report-link bg-green-600 text-white p-2 rounded hover:bg-green-700" data-report="seats">Available Seats</button>
                <button class="report-link bg-yellow-600 text-white p-2 rounded hover:bg-yellow-700" data-report="prereq">Prerequisite Issues</button>
                <button class="report-link bg-purple-600 text-white p-2 rounded hover:bg-purple-700" data-report="student">Students by Course</button>
            </div>
        </div>
    </div>
    
    <!-- Report Containers -->
    <div id="seats-report" class="report-content hidden bg-white p-4 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-3">Courses with Available Seats</h3>
        <a href="/admin/reports/courses" class="text-blue-600 hover:underline">Generate Full Report</a>
    </div>
    
    <div id="prereq-report" class="report-content hidden bg-white p-4 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-3">Students with Prerequisite Issues</h3>
        <a href="/admin/reports/prerequisites" class="text-blue-600 hover:underline">Generate Full Report</a>
    </div>
    
    <div id="student-report" class="report-content hidden bg-white p-4 rounded-lg shadow">
        <h3 class="text-xl font-semibold mb-3">Students by Course</h3>
        <div class="mb-4">
            <label class="block mb-2">Select Course:</label>
            <select id="course-selector" class="w-full p-2 border rounded">
                <option value="">-- Select a Course --</option>
                <% if (typeof courses !== 'undefined' && courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                        <option value="<%= course._id %>"><%= course.courseCode %> - <%= course.name %></option>
                    <% }); %>
                <% } %>
            </select>
        </div>
        <button id="view-students" class="bg-blue-600 text-white p-2 rounded hover:bg-blue-700 disabled:bg-gray-400" disabled>View Students</button>
    </div>
</div>
<%- include('../partials/footer') %>
<script src="/js/admin/admin.js"></script>